# Claude Code Web - Environment Configuration
# Copy this file to .env and fill in your values

# Required: Anthropic API key for Claude
ANTHROPIC_API_KEY=sk-ant-...

# Required: GitHub Personal Access Token with repo access
# Required scopes: repo, read:user
GITHUB_TOKEN=ghp_...

# Durable Streams server URL
# Default: http://localhost:4437
DURABLE_STREAMS_URL=http://localhost:4437

# Modal sidecar service URL (for container management)
# Default: http://localhost:8080
MODAL_SIDECAR_URL=http://localhost:8080

# Session API token for hook authentication
# Used to authenticate callbacks from container hooks
SESSION_API_TOKEN=your-secret-token-here

# Idle timeout in milliseconds
# How long to wait after Claude stops responding before terminating container
# Default: 300000 (5 minutes)
IDLE_TIMEOUT_MS=300000
