{
  "name": "@durable-streams/ai-session",
  "version": "0.1.0",
  "description": "Durable AI sessions with unified schema for Vercel AI SDK, TanStack AI, and OpenResponses",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js"
    },
    "./adapters/vercel": {
      "types": "./dist/adapters/vercel.d.ts",
      "import": "./dist/vercel.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown && tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@durable-streams/client": "workspace:*",
    "@durable-streams/state": "workspace:*",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@durable-streams/server": "workspace:*",
    "@types/node": "^22.10.2",
    "tsdown": "^0.2.11",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "ai": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "ai": {
      "optional": true
    }
  }
}
