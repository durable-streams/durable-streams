{
  "name": "@durable-streams/y-durable-streams",
  "description": "Yjs provider for Durable Streams - sync Yjs documents over append-only streams",
  "version": "0.1.1",
  "author": "Durable Stream contributors",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/durable-streams/durable-streams.git",
    "directory": "packages/y-durable-streams"
  },
  "bugs": {
    "url": "https://github.com/durable-streams/durable-streams/issues"
  },
  "keywords": [
    "yjs",
    "durable-streams",
    "crdt",
    "sync",
    "collaborative",
    "real-time",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@durable-streams/client": "workspace:*"
  },
  "devDependencies": {
    "@durable-streams/server": "workspace:*",
    "lib0": "^0.2.99",
    "tsdown": "^0.9.0",
    "y-protocols": "^1.0.6",
    "yjs": "^13.6.24"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "lib0": "^0.2.0",
    "y-protocols": "^1.0.0",
    "yjs": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
