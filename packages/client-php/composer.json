{
  "name": "durable-streams/client",
  "description": "PHP client for Durable Streams protocol",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "psr/log": "^3.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^2.0"
  },
  "suggest": {
    "psr/log": "For structured logging in IdempotentProducer",
    "psr/http-client": "For PSR-18 HTTP client support"
  },
  "autoload": {
    "psr-4": {
      "DurableStreams\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "DurableStreams\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse src --level=5"
  },
  "config": {
    "sort-packages": true
  }
}
